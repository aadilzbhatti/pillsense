<%= provide(:title, 'All Users') %>
<h1>All Users</h1>

<ul class="users">
  <% @providers.each do |u| %>
      <li>
        <%= link_to u.name, u %>
        <% if current_user && current_user.admin? %>
            | <%= link_to 'delete', u, method: :delete, data: { confirm: 'You sure?' } %>
        <% end %>
      </li>
  <% end %>
</ul>